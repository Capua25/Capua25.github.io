---
interface Props {
	title: string;
	link: string;
}

const { title, link } = Astro.props;
---

<div class="link-card">
	<a href={link}>
		<h2>
			{title}
		</h2>
		<slot />
	</a>
</div>
<style>
	.link-card {
		display: flex;
		flex-direction: column;
		justify-content: start;
		align-items: center;
		padding: 20px 30px;
		background-color: #23262d;
		background-image: none;
		border-radius: 7px;
		box-shadow: inset 0 0 0 1px rgba(255, 255, 255, 0.1);
		transition: all 0.2s ease-out;
        flex-grow: 1;
		min-width: 320px;
	}
	.link-card:hover{
		transform: scale(1.1);
		transition: all 0.2s ease-out;
	}
	h2 {
		margin: 0;
		font-size: 2rem;
		transition: color 0.6s cubic-bezier(0.22, 1, 0.36, 1);
		text-align: center;
	}
	a{
		all: unset;
	}
</style>
