---
import Layout from '../layouts/Layout.astro';
import Card from '../components/Card.astro';
import Boton from '../components/Boton.astro';
import Header from '../components/Header.astro';
---

<Layout title="Martín Capuano">
	<Header label1='About me' label2='Experience' label3='Contact'></Header>
	<main>
		<h1><span class="">Martín Capuano</span></h1>
		<Card title='Mi portfolio' body='Este va a ser mi portfolio' href='#'></Card>
	</main>
</Layout>

<style>
	main {
		margin: auto;
		padding: 1rem;
		width: 800px;
		max-width: calc(100% - 2rem);
		color: white;
		font-size: 20px;
		line-height: 1.6;
		display: flex;
		flex-direction: column;
		align-items: center;
	}
	h1 {
		font-size: 4rem;
		font-weight: 700;
		line-height: 1;
		text-align: center;
		margin-bottom: 1em;
	}
</style>
